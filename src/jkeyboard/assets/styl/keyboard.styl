html.scroll-fixed
  position: relative
  overflow:hidden
  height:100%
  body
    overflow:hidden

.border-box
  box-sizing: border-box

.bt
  border-top: 1px solid #e4e4e4

.hide
  display:none

.keyboard
  position: absolute
  left: 0
  bottom: 0
  z-index:900
  height: 260px
  background-color: #fff
  text-align:center
  line-height:1
  transform:translateY(100%)
  transition:all .2s ease-in
  width: 100%
  border-color:#d6d6d6
  .abs-mt
    position: absolute
    left: 50%
    top: 0
    transform: translateX(-50%)
  .abs-rm
    position: absolute
    right: 0
    top: 50%
    transform: translateY(-50%)
  .symbol
    width:100%
    height: 60px
    background-color: #F9F9F9
    border-color:#d6d6d6
    .arrow-box
      width:80px
      right:8px
      .arrow-box-text
        color:#FF5C0B
        font-size:24px
        border:1px solid #FF5C0B
        border-radius:4px
        padding: 3px 0
  ul
    position: absolute;
    top: 60px
    bottom: 0
    left: 0
    border-color:#d6d6d6
    li
      border-color:#d6d6d6